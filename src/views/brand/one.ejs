<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brand <%= row.brand_id %></title>
</head>
<body>
    <%- include('../nav') %>
    <main>
        <h2>Brand <%= row.brand_id %> Page</h2>
        <h3><%= row.brand_name %></h3>
        <p><%= row.brand_desc %></p>
        <% if (row.brand_id > 1) { %>
            <form action=<%- `/brand/${row.brand_id}/delete` %> method="post"><button type="submit">Delete</button></form>
            <a href=<%- `/brand/${row.brand_id}/edit` %>>Edit</a>
        <% } %>
        <h2>Products</h2>
        <% if (products.length === 0) { %>
            <h3>No Products</h3>
        <% } else { %>
        <% for (const item of products) { %>
            <div>
                <h3><a href=<%- `/item/${item.item_id}` %>><%= item.item_name %></a></h3>
            </div>
        <% } } %>
    </main>
</body>
</html>